# 表示是最顶层的 EditorConfig 配置文件
root = true

# 表示所有文件适用
[*]
# 缩进风格（tab | space）
indent_style = space
# 缩进占两个空格
indent_size=2
# 控制换行类型(lf | cr | crlf)
end_of_line = lf
# 设置文件字符集为 utf-8
charset = utf-8
# 去除行首的任意空白字符
trim_trailing_whitespace = true
# 始终在文件末尾插入一个新行
insert_final_newline = true
# 一行最大长度
max_line_length = 120

# 表示仅 md 文件适用以下规则
[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false
